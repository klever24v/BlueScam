<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Escaneo Bluetooth</title>
    <%- include('partials/head.ejs') %>
</head>
<body class="bg-dark text-white">
    <%- include('partials/navigation.ejs') %>
    <%- include('partials/optionsbluetooth') %>

    <!-- Contenido principal para el escaneo de dispositivos -->
    <div class="container text-center mt-5">
        <h1 class="display-4 mb-4">Escaneo de dispositivos Bluetooth</h1>
        <button id="scanButton" class="btn btn-primary btn-lg">Buscar Dispositivos</button>
        <div id="loadingMessage" class="mt-3" style="display: none;">Buscando dispositivos...</div>
        <div id="errorMessage" class="mt-3 text-danger"></div>
    </div>

    <div class="container mt-4">
        <ul id="deviceList" class="list-group"></ul>
    </div>

    <div id="deviceInfo" class="container mt-4"></div>

    <script src="/js/script.js"></script>
</body>
</html>
